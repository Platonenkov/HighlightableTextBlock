<Window x:Class="HighlightSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:HighlightSample"
        xmlns:controls="clr-namespace:HighlightableTextBlock;assembly=HighlightableTextBlock"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="filter" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox x:Name="full" Text="{Binding Path=FullText, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1"/>
        <TextBlock Grid.Row="2" Text="{Binding Text, ElementName=full}" controls:HighlightableTextBlock.HightlightText="{Binding Text, ElementName=filter}" controls:HighlightableTextBlock.HighlightBrush="Yellow" controls:HighlightableTextBlock.HighlightTextBrush="Red"/>
    </Grid>
</Window>
